<% if user_signed_in? %>
<div class="page-header">
   <h1>Here's what people are saying about Otters!</h1>
</div>

<%= link_to "New Status", new_status_path, class: "btn btn-success" %>

<% @status.each do |status| %>
   
   <div class="status">
    <div class="row">
        <div class="span1">
          <%= image_tag current_user.gravatar_url %>
        </div>
          <div class="span7">
            <strong><%= current_user.full_name %></strong>
            <p><%= status.content %></p> 
            <div class="meta">
              <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
              <span class="admin">
                | <%= link_to "Edit", edit_status_path(status) %> |
                <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
              </span>
          </div>
        </div>
      </div>
  </div>
   <% end %>
  <% else %>
    <% redirect_to action: 'new' %>
  <% end %>

